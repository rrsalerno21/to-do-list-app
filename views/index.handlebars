<header>
    <h1>To-Do List App</h1>
</header>

<!-- Main Container -->
<main class="container my-3">

    <!-- Container for buttons -->
    <section class="d-flex w-100 justify-content-center">

        <!-- Button to trigger modal for adding task -->
        <button type="button" class="btn my-gradient text-white mx-3" data-toggle="modal" data-target="#taskModal" data-whatever="ADD">
            Add To-Do
        </button>

        <!-- Button to clear all tasks -->
        <button type="button" class="btn btn-secondary mx-3" id="clear-all-btn">
            Clear all tasks
        </button>
    </section>
    
    <!-- Active Task accordian section container -->
    <section class="accordion my-3" id="F1Active">

        <!-- Main card to contain section -->
        <div class="card">

            <!-- Card Header -->
            <div class="card-header" id="F1ActHeading">
                <h2 class="mb-0">
                    <!-- Button to toggle show of accordian; contains active task count badge -->
                    <button class="btn btn-light btn-block text-left" type="button" data-toggle="collapse"
                        data-target="#collapseF1Active" aria-expanded="true" aria-controls="collapseF1Active">
                        Active <span class="badge badge-light my-gradient text-white">{{activeCount}}</span>
                    </button>
                </h2>
            </div>

            <!-- Div that contains the content of the accordian -->
            <div id="collapseF1Active" class="collapse show" aria-labelledby="F1ActHeading" data-parent="#F1Active">
                
                <!-- Begin card body -->
                <div class="card-body">

                    <!-- Div that contains active tasks -->
                    <div class="list-group" id="activeListDiv">
                        <!-- Handlebars partial here for todos with status=false -->
                        {{#each todos}}
                            {{#unless this.status}}
                                {{> task-block status=false}}
                            {{/unless}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Active Folder Here-->


    <!-- Completed Task accordian section container -->
    <div class="accordion my-3" id="F1Completed">

        <!-- Main card to contain section -->
        <div class="card">

            <!-- Card Header -->
            <div class="card-header" id="F1CompletedHeading">
                <h2 class="mb-0">
                    <!-- Button to toggle show of accordian; contains completed task count badge -->
                    <button class="btn btn-light btn-block text-left" type="button" data-toggle="collapse"
                        data-target="#collapseF1Completed" aria-expanded="true" aria-controls="collapseF1Completed">
                        Completed <span class="badge badge-light bg-secondary text-white">{{completedCount}}</span>
                    </button>
                </h2>
            </div>

            <!-- Div that contains the content of the accordian -->
            <div id="collapseF1Completed" class="collapse" aria-labelledby="F1DeletedHeading"
                data-parent="#F1Completed">

                <!-- Begin card body -->
                <div class="card-body">

                    <!-- Div that contains completed tasks -->
                    <div class="list-group" id="completedListDiv">
                        <!-- Handlebars partial here for todos with status=true -->
                        {{#each todos}}
                            {{#if this.status}}
                                {{> task-block status=true}}
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Completed Folder Here-->

    
    <!-- BS Modal Section For Adding/Editing Tasks-->
    <section class="modal fade" id="taskModal" tabindex="-1" role="dialog" aria-labelledby="taskModalTitle"
        aria-hidden="true">
        <!-- Centered modal via class "modal-dialog-centered" -->
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">

                    <!-- Modal Header -->
                    <h5 class="modal-title" id="taskModalTitle">ADD &/OR UPDATE Task</h5>

                    <!-- Close Modal X -->
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <!-- Begin Modal Body -->
                <div class="modal-body">

                    <!-- Modal Form Container -->
                    <div class="form-container">

                        <!-- Form Group for task_header -->
                        <div class="form-group">
                            <label for="task_header"><strong>Task Name:</strong> </label>
                            <input class="form-control task-name" id="task-name" type="text" name="task_header">
                        </div>

                        <!-- Form Group for task_details -->
                        <div class="form-group">
                            <label for="task_details"><strong>Task Details:</strong></label>
                            <textarea class="form-control task-body" name="task_details"></textarea>
                        </div>

                        <!-- Form Group for task_due_date -->
                        <div class="form-group">
                            <label for="task_due_date"><strong>Due Date:</strong></label>
                            <input type="date" class="form-control task-due-date" name="task_due_date">
                        </div>

                        <!-- Form Group for task_status -->
                        <div class="form-group">
                            <label for="task_status" id="status-label"><strong>Is this task already completed?</strong></label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input status-incomplete" type="radio" name="status" id="status_no" value="false"
                                    checked>
                                <label class="form-check-label" for="status_no">No</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input status-complete" type="radio" name="status" id="status_yes" value="true">
                                <label class="form-check-label" for="status_yes">Yes</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal footer for buttons to close and add/edit task -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn my-gradient text-white" id="modal-act-button" data-method="ADD">Add Task</button>
                </div>
            </div>
        </div>
    </section>


</main>

