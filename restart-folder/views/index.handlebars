<header>
    <h1>To-Do List App</h1>
</header>

<div class="container my-3">
    <div class="d-flex w-100 justify-content-center">
        <!-- Button trigger modal -->
        <button type="button" class="btn my-gradient text-white mx-3" data-toggle="modal" data-target="#taskModal">
            Add To-Do
        </button>

        <button type="button" class="btn btn-secondary mx-3" id="clear-all-btn">
            Clear all tasks
        </button>
    </div>
    
    <!-- BEGIN ACTIVE FOLDER HERE -->
    <div class="accordion my-3" id="F1Active">

        <div class="card">
            <div class="card-header" id="F1ActHeading">
                <h2 class="mb-0">
                    <button class="btn btn-light btn-block text-left" type="button" data-toggle="collapse"
                        data-target="#collapseF1Active" aria-expanded="true" aria-controls="collapseF1Active">
                        Active <span class="badge badge-light my-gradient text-white">4</span>
                    </button>
                </h2>
            </div>

            <div id="collapseF1Active" class="collapse show" aria-labelledby="F1ActHeading" data-parent="#F1Active">
                <div class="card-body">
                    <div class="list-group">
                        {{#each todos}}
                            {{#unless this.status}}
                                {{> task-block status=false}}
                            {{/unless}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END ACTIVE FOLDER HERE-->


    <!-- BEGIN COMPLETED FOLDER HERE -->
    <div class="accordion my-3" id="F1Completed">

        <div class="card">
            <div class="card-header" id="F1CompletedHeading">
                <h2 class="mb-0">
                    <button class="btn btn-light btn-block text-left" type="button" data-toggle="collapse"
                        data-target="#collapseF1Completed" aria-expanded="true" aria-controls="collapseF1Completed">
                        Completed <span class="badge badge-light my-gradient text-white">4</span>
                    </button>
                </h2>
            </div>

            <div id="collapseF1Completed" class="collapse" aria-labelledby="F1DeletedHeading"
                data-parent="#F1Completed">
                <div class="card-body">
                    <div class="list-group">
                        {{#each todos}}
                            {{#if this.status}}
                                {{> task-block status=true}}
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END COMPLETED FOLDER HERE-->

    <!-- BEGIN MODAL HERE -->


    <!-- Modal -->
    <div class="modal fade" id="taskModal" tabindex="-1" role="dialog" aria-labelledby="taskModalTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="taskModalTitle">ADD &/OR UPDATE Task</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-container">
                        <div class="form-group">
                            <label for="task_header"><strong>Task Name:</strong> </label>
                            <input class="form-control" type="text" name="task_header">
                        </div>

                        <div class="form-group">
                            <label for="task_details"><strong>Task Details:</strong></label>
                            <textarea class="form-control" name="task_details"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="task_status"><strong>Is this task already completed?</strong></label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="status_no" value="0"
                                    checked>
                                <label class="form-check-label" for="status_no">No</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="status_yes" value="1">
                                <label class="form-check-label" for="status_yes">Yes</label>
                            </div>
                        </div>
                    </div>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn my-gradient text-white" id="save">Add Task</button>
                </div>
            </div>
        </div>
    </div>


</div>

